{% extends 'back.html.twig' %}

{% block content %}
 <h1>Category edit {{ category.id }}</h1>   

{% for flash_bag in app.session.flashBag.get("success") %}
   <span class="alert-success"> {{flash_bag}} </span>
{% endfor %}


    {{ form_start(edit_form) }}



        <div class="form-group col-md-12">
            <div class="row">
                <div class="col-md-4"><label>{{form_label(edit_form.libelle)}}</label></div>
                <div class="col-md-8">{{form_widget(edit_form.libelle, {'attr': {'class': 'form-contro'}})}}</div>
                {{form_errors(edit_form.libelle)}}
            </div>
        </div>


        <div class="form-group col-md-12">
            <div class="row">
            <div class="col-md-4"><label>{{form_label(edit_form.description)}}</label></div>
            <div class="col-md-8">{{form_widget(edit_form.description, {'attr': {'class': 'form-contro'}})}}</div>
            {{form_errors(edit_form.description)}}
            </div>
        </div>


        <div class="form-group col-md-12">
            <div class="row">
            <div class="col-md-4"><label>{{form_label(edit_form.slug)}}</label></div>
            <div class="col-md-8">{{form_widget(edit_form.slug, {'attr': {'class': 'form-contro'}})}}</div>
            {{form_errors(edit_form.slug)}}
            </div>
        </div>







        <input type="submit" value="Edit" class="btn btn-block btn-success" />
    {{ form_end(edit_form) }}

    <ul class="list-unstyled">
        <li style="margin-top:15px;margin-bottom:15px">
            <a href="{{ path('admin_category_index') }}" class="btn btn-warning btn-block">Retour a la liste</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-info btn-block">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}




{% block breadcrumb %}
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="#">Tableau de bord</a></li>
    <li class="breadcrumb-item active" aria-current="page">Edition de categorie</li>
  </ol>
</nav>
{% endblock %}
