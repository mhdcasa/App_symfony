{% extends 'back.html.twig' %}

{% block content %}
    <h1>Posts list</h1>

    <div class="pull-right">
    <ul class="list-unstyled">
        <li>
            <a href="{{ path('admin_post_new') }}" class="btn btn-success"><i class="fa fa-plus"></i> Nouvelle categorie</a>
        </li>
    </ul>
    </div>


    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Body</th>
                <th>Slug</th>
                <th>Datepublish</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td><a href="{{ path('admin_post_show', { 'id': post.id }) }}">{{ post.id }}</a></td>
                <td>{{ post.title }}</td>
                <td>{{ post.body }}</td>
                <td>{{ post.slug }}</td>
                <td>{% if post.datePublish %}{{ post.datePublish|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_post_show', { 'id': post.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_post_edit', { 'id': post.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}

{% block breadcrumb %}
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="#">Tableau de bord</a></li>
    <li class="breadcrumb-item active" aria-current="page">Liste des Postes</li>
  </ol>
</nav>
{% endblock %}

